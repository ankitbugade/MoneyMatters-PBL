function calculateEMI(principal, rate, tenureInMonths) {
    const monthlyRate = rate / 100 / 12;
    const numerator = principal * monthlyRate * Math.pow(1 + monthlyRate, tenureInMonths);
    const denominator = Math.pow(1 + monthlyRate, tenureInMonths) - 1;
    const emi = numerator / denominator;
    return emi;
}

let p = document.querySelector("#principal");
p.addEventListener('change', (event) => {
  amt = event.target.value;
});

let r = document.querySelector("#rate");
